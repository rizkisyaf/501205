{
    "extends": "../core/tsconfig.json",
    "compilerOptions": {
        "jsx": "react",
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "moduleResolution": "Bundler",
        "allowImportingTsExtensions": true,
        "declaration": true,
        "emitDeclarationOnly": true,
        "composite": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.json"
    ],
    "files": [
        "src/index.ts",
        "src/client.ts",
        "src/post.ts",
        "src/interactions.ts",
        "src/memory.ts",
        "src/actions.ts"
    ]
}